---
import Icon from "../Icon/Icon.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header class="header">
	<div class="header__inner">
		<div class="header__brand">
			<a class="logo-link" href="/">
				<Icon name="money-bag" iconWidth="60" />
			</a>
			<h1 class="site-title">{title}</h1>
		</div>
		<nav class="header__nav">
			<a class="header__link" href="/reports">Reports</a>
			<a class="header__link" href="/trades">Trades</a>
		</nav>
	</div>
</header>

<style lang="scss">
	@use "../../styles/variables";

	.header {
		display: block;
		position: sticky;
		z-index: 4;
		top: 0;
		right: 0;
		left: 0;
		padding: variables.$space-8;
		background-color: variables.$color-blue-800;
		box-shadow:
			0 0 0.2rem variables.$color-blue-900,
			0 0.2rem 0.4rem variables.$color-blue-900;
		color: variables.$color-white;
	}

	.header__inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: variables.$max-body-width;
		margin-right: auto;
		margin-left: auto;
	}

	.header__brand {
		display: flex;
		align-items: center;
	}

	.logo-link {
		color: variables.$color-white;
	}

	.header__nav {
		display: flex;
		gap: variables.$space-flex-16;
		align-items: center;
	}

	.header__link {
		color: variables.$color-white;
		font-size: variables.$font-size-lead;
		text-decoration: none;
	}

	.site-title {
		align-self: flex-end;
		margin-top: 0;
		margin-bottom: 0;
		margin-left: variables.$space-16;
		color: variables.$color-white;
		font-size: variables.$font-size-h3;
		line-height: 1;
	}
</style>
