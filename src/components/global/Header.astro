---
import Icon from "../Icon/Icon.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header class="header">
	<div class="header__inner">
		<div class="header__brand">
			<a class="logo-link" href="/">
				<Icon name="money-bag" iconWidth="60" />
			</a>
			<h1 class="site-title">{title}</h1>
		</div>
		<nav class="header__nav">
			<a class="header__link" href="/outperformers">Outperformers</a>
			<a class="header__link" href="/industries">Industries</a>
			<a class="header__link" href="/trades">Trades</a>
		</nav>
	</div>
</header>

<style lang="scss">
	@use "../../styles/variables";

	.header {
		display: flex;
		grid-column: 1 / 3;
		grid-row: 1 / 1;
		align-items: center;
		background-color: variables.$color-blue-800;
		color: variables.$color-white;
	}

	.header__inner {
		display: flex;
		flex: 1 0 auto;
		justify-content: space-between;
		margin: 0 variables.$space-8;
	}

	.header__brand {
		display: flex;
		align-items: center;
	}

	.logo-link {
		color: variables.$color-white;
	}

	.header__nav {
		display: flex;
		gap: variables.$space-flex-16;
		align-items: center;
	}

	.header__link {
		color: variables.$color-white;
		font-size: variables.$font-size-lead;
		text-decoration: none;
	}

	.site-title {
		align-self: flex-end;
		margin-top: 0;
		margin-bottom: 0;
		margin-left: variables.$space-16;
		color: variables.$color-white;
		font-size: variables.$font-size-h3;
		line-height: 1;
	}
</style>
