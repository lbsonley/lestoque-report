---
import Link from "@components/global/Link.astro";

interface Props {
	links: { href: string; title: string }[];
}

const { links } = Astro.props;
---

<ul class="link-list">
	{
		links.map((link) => (
			<li class="link-list--item">
				<Link href={link.href} title={link.title} />
			</li>
		))
	}
</ul>

<style lang="scss">
	.link-list {
		list-style: none;
	}

	.link-list--item {
		padding-left: 0;
	}
</style>
