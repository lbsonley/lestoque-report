{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@data/*": ["src/data/*"],
			"@layouts/*": ["src/layouts/*"],
			"@state/*": ["src/state/*"],
			"@utils/*": ["src/utils/*"],
			"@plugins/*": ["src/plugins/*"]
		}
	}
}
